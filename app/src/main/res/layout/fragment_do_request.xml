<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/do_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moviles.utp.helpschoolapp.ui.fragment.DoRequestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_horizontal_margin"
            android:text="@string/select_request" />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_horizontal_margin"/>

        <EditText
            android:id="@+id/detail_request"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="@dimen/bottombar_height"
            android:layout_marginLeft="@dimen/padding_horizontal_margin"
            android:layout_marginRight="@dimen/padding_horizontal_margin"
            android:ems="7"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/sendRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/toolbarHeight"
            android:text="enviar"
            android:onClick="onClick"/>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
